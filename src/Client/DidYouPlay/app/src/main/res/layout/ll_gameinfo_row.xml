<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/gameinfo_vertical_margin"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivCategoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24"
        app:tint="@color/magenta" />

    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/gameinfo_vertical_margin"
        android:textColor="@color/magenta"
        android:textSize="@dimen/gameinfo_text_size"
        app:layout_constraintStart_toEndOf="@+id/ivCategoryIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lineHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginHorizontal="@dimen/gameinfo_vertical_margin"
        android:background="@color/magenta"
        app:layout_constraintStart_toEndOf="@+id/ivCategoryIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryName" />

    <TextView
        android:id="@+id/tvCategoryContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/gameinfo_row_margin_indented"
        android:layout_marginVertical="@dimen/gameinfo_vertical_margin"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="@dimen/gameinfo_line_spacing"
        android:textSize="@dimen/gameinfo_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCategoryIcon"
        app:layout_constraintTop_toBottomOf="@+id/lineHorizontal1" />

</androidx.constraintlayout.widget.ConstraintLayout>